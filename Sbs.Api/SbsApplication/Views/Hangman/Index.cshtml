                <label asp-for="LettersAttempted" class="control-label"></label>
                @Html.DisplayFor(model => model.LettersAttempted)
            </div>
            <div class="form-group" dir="ltr">
                @foreach (string str in Model.HangmanWordList)
                {
                    @Html.Raw(" ")
                    @Html.Raw(@str)
                    @Html.Raw(" ")
                }
            </div>
            <div class="form-group">
                <input type="submit" value="A" class="btn btn-primary" asp-action="A" asp-controller="Hangman" />
