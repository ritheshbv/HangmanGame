@model SbsApplication.Models.HangmanWordModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Happy Playing Hangman!</h1>
</div>

<hr />
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
